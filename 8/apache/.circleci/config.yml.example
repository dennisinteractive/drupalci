# PHP CircleCI 2.0 configuration file
version: 2
jobs:
  build:
    machine:
      docker_layer_caching: true
    working_directory: /tmp/drupalci
    steps:
      - run:
          name: Run tests
          command: docker run --name drupalci --rm marcellovani/drupalci:8-apache \
                          --project ${CIRCLE_PROJECT_REPONAME} \
                          --version ${CIRCLE_BRANCH}-dev \
                          --vcs https://github.com/${CIRCLE_PROJECT_USERNAME}/${CIRCLE_PROJECT_REPONAME}.git \
                          -v /tmp/drupalci/verbose:/verbose
      - store_artifacts:
          path: /tmp/drupalci/verbose
